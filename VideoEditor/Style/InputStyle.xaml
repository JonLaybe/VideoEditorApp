<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="TextBoxInput" TargetType="TextBox">
        <Setter Property="FontSize" Value="17"/>
        <Setter Property="Foreground" Value="{DynamicResource TextColorTextBoxInputBrush}"/>
        <Setter Property="Margin" Value="2"/>
        <Setter Property="MaxLength" Value="20"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border x:Name="borderBtn" Background="{DynamicResource BackgroundTextBoxInputBrush}" BorderThickness="2"
                            BorderBrush="{DynamicResource BorderTextBoxInputBrush}" CornerRadius="4">
                        <ScrollViewer x:Name="PART_ContentHost" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>